                    <option>Mexico</option>
                    <option>Canada</option>
                    <option>USA</option>
                    <option>France</option>
                    <option>Spain</option>
                    <option>Germany</option>
                </select>
            </div>*@



    </form>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
